<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    tools:ignore="PxUsage,HardcodedText,RtlHardcoded"
    tools:context="com.sun.hotelproject.moudle.MainActivity">
<!--主界面-->

    <!--<com.sun.hotelproject.view.ViewPager-->
        <!--android:id="@+id/viewpager"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
    <!--</com.sun.hotelproject.view.ViewPager>-->

    <!--<com.sun.hotelproject.view.MyViewPager-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/viewpager"-->
        <!--android:layout_gravity="center"-->
        <!--android:clickable="false"-->
        <!--android:focusableInTouchMode="false">-->

    <!--</com.sun.hotelproject.view.MyViewPager>-->
    <ImageView
        android:id="@+id/imgchange"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        />
    <com.sun.hotelproject.view.MyVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <include layout="@layout/toolbar_null"
        android:id="@+id/toolbar"/>
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="180px"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/Swrite"
            android:text="welcome to"/>
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title1"
            android:textSize="100px"
            android:layout_marginTop="20px"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWrite"
            android:text="Monalisa Hotel"/>

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title2"
            android:text="A place to experience and enjoy the life"
            android:layout_marginTop="20px"
            android:textSize="24px"
            android:textColor="@color/Swrite"/>
            <ImageView
                android:id="@+id/play"
                android:layout_width="78px"
                android:layout_height="78px"
                android:layout_marginTop="40px"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/title3"
                android:background="@drawable/btn_play"/>

        <LinearLayout
            android:layout_width="1551px"
            android:layout_height="124px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80px"
            android:background="@drawable/blue_shape"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/check_in"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/home_selector"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bt1"
                    android:layout_width="131px"
                    android:duplicateParentState="true"
                    android:layout_height="38px"
                    android:background="@drawable/btn_checkin"
                    />
            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="40px"
                android:background="@color/colorWrite"/>
            <LinearLayout
                android:id="@+id/check_out"
                android:layout_width="0dp"
                android:focusable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/home_selector"
                android:layout_height="match_parent">
                <TextView

                    android:id="@+id/bt2"
                    android:layout_width="137px"
                    android:duplicateParentState="true"
                    android:layout_height="38px"
                    android:background="@drawable/btn_quit"
                    />
            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="40px"
                android:background="@color/colorWrite"/>
            <LinearLayout
                android:id="@+id/renwal"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:background="@drawable/home_selector"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView

                    android:id="@+id/bt3"
                    android:layout_width="137px"
                    android:duplicateParentState="true"
                    android:layout_height="38px"
                    android:background="@drawable/btn_roomrenewal"
                    />
            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="40px"
                android:background="@color/colorWrite"/>
            <LinearLayout
                android:id="@+id/reserve"
                android:layout_width="0dp"
                android:background="@drawable/home_selector"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bt4"
                    android:layout_width="207px"
                    android:duplicateParentState="true"
                    android:layout_height="38px"
                    android:background="@drawable/btn_onlinebooking"
                    />
            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="40px"
                android:background="@color/colorWrite"/>
            <LinearLayout
                android:id="@+id/invoice"
                android:layout_width="0dp"
                android:background="@drawable/home_selector"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/bt5"
                    android:layout_width="192px"
                    android:duplicateParentState="true"
                    android:layout_height="38px"
                    android:background="@drawable/btn_printtheinvoice" />
            </LinearLayout>

        </LinearLayout>
    <ImageView
        android:id="@+id/img_wuka"
        android:layout_width="277px"
        android:visibility="gone"
        android:layout_height="191px"
        android:layout_marginLeft="122px"
        android:layout_marginTop="701px"
        android:src="@drawable/img_wuka"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/img_xufang"
        android:layout_width="277px"
        android:layout_height="191px"
        android:visibility="gone"
        android:layout_marginLeft="650px"
        android:layout_marginTop="701px"
        android:src="@drawable/xufang"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/img_wangshang"
        android:layout_width="277px"
        android:visibility="gone"
        android:layout_height="191px"
        android:layout_marginLeft="1110px"
        android:layout_marginTop="701px"
        android:src="@drawable/img_wangshangguanbi"
        tools:ignore="NotSibling" />

</RelativeLayout>
